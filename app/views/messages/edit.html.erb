<h1>メッセージの編集</h1>
 <div class="form-group">
      <label for="message_name" class="col-xs-1 control-label">名前:</label>
      <div class="col-xs-11">
        <%= f.text_field :name,  class: "form-control" %>
      </div>
  </div>
  <div class="form-group">
    <label for="message_body" class="col-xs-1 control-label">内容:</label>
    <div class="col-xs-11"> 
      <%= f.text_area :body, class: "form-control"  %>
    </div>
  </div>
  <div class="form-group">
    <label for="message_age" class="col-xs-1 control-label">年齢:</label>
    <div class="col-xs-11"> 
      <%= f.text_field :age, class: "form-control"  %>
    </div>
  